# GrokFlow Environment Configuration
# Copy this file to .env and fill in your values

# Required: x.ai API Key
XAI_API_KEY=your_api_key_here

# Environment (development, staging, production)
GROKFLOW_ENV=development

# Logging
GROKFLOW_LOG_LEVEL=INFO

# API Configuration
GROKFLOW_API_URL=https://api.x.ai/v1
GROKFLOW_DEFAULT_MODEL=grok-4-fast
GROKFLOW_PLANNER_MODEL=grok-beta
GROKFLOW_EXECUTOR_MODEL=grok-4-fast

# Rate Limiting
GROKFLOW_RATE_LIMIT_RPM=60

# Performance
GROKFLOW_ENABLE_CACHING=true
GROKFLOW_CACHE_TTL=300

# Monitoring
GROKFLOW_ENABLE_MONITORING=true

# Data Directory
GROKFLOW_DATA_DIR=~/.grokflow
